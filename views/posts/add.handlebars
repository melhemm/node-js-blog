<div class="card card-body" style="width: 700px; height: 400px;  margin: 0 auto; max-width: 100%">
    <div class="form-group" style="height: 250px; width: 700px; max-width: 100%">
        <form action="/posts" method="POST" enctype="multipart/form-data">
            <textarea name="details" class="form-control" required placeholder="What's on your mind"
                style="resize: none; height: 200px"></textarea>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload Photo</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" required aria-describedby="inputGroupFileAddon01"
                        name="image" id="image">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
            </div>

            <div class="form-check">
                <input type="checkbox" name="allowComments" placeholder="Allow comments" id="filled-in-box"
                    checked="checked" class="form-check-input">
                <label for="filled-in-box" class="form-check-label">Allow comments</label>
            </div>
            <label for="status" style="margin-top: 1rem;">Privacy</label>
            <select name="status" class="browser-default custom-select mb-2" style="width: fit-content;">
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
                <option value="unpublished">Unpublished</option>
            </select> <br>
            <button type="submit" class="btn btn-primary" style="width: fit-content;">Publish</button>
        </form>
    </div>
</div>